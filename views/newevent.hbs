<link rel="stylesheet" href="public\stylesheets\style.css">
<form method="POST">
  <div class="form-group">
    <label>Subject</label>
    <input class="form-control" name="ev-subject" type="text" value="{{ newEvent.subject }}" id="Subject">
  </div>
  <div class="form-group">
    <label>Attendees</label>
    <input class="form-control" name="ev-attendees" type="text" value="{{ newEvent.attendees }}" id="Attendees">
  </div>
  <div class="row">
    <div class="col">
      <div class="form-group">
        <label>Start</label>
        <input class="form-control" name="ev-start" type="datetime-local" value="{{ newEvent.start }}" id="Start">
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <label>End</label>
        <input class="form-control" name="ev-end" type="datetime-local" value="{{ newEvent.end }}" id="End">
      </div>
    </div>
  </div>
  <div class="form-group mb-3">
    <label>Body</label>
    <textarea class="form-control" name="ev-body" rows="3" id="Body">{{ newEvent.body }}</textarea>
  </div>
  <input class="btn btn-primary mr-2 bg-bluealan no-border" type="submit" value="Create" id="Create"/>
  <a class="btn btn-secondary bg-bluealan no-border" href="/calendar">Cancel</a>

  <div class="form-group mb-3"></div>
 <p>
  <button class="btn bg-lightbluealan btn-sm mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseWidthExample" aria-expanded="false" aria-controls="collapseWidthExample">
    Commands list
  </button>
</p>
<div style="min-height: 140px;">
  <div class="collapse collapse-horizontal" id="collapseWidthExample">
    <div class="card card-body bg-lightbluealan no-border" style="width: 300px;">
      <ul>
        <li>Open calendar tab ... </li>
        <li>Open home tab... </li>
        <li>Add new event ... </li>
        <li>Change subject to... </li>
        <li>Add "person name" as a new attendee ... </li>
        <li>Change start date to ... </li>
        <li>Change end date to ... </li>
        <li>Body message is ... </li>
        <li>Create the new event ... </li>
        <li>Cancel new event ... </li>
      </ul>
    </div>
  </div>
</div>



